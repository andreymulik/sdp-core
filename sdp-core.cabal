Library
  default-language: Haskell2010
  hs-source-dirs:   src
  
  build-tools: cpphs >=1.19
  ghc-options: -O2 -Wall -Wcompat -Wall-missed-specialisations
               -pgmPcpphs -optP--cpp -optP-traditional
  
  build-depends:
    base     >= 4.9 && <    5,
    ghc-prim >= 0.5 && < 0.14
  
  -- GHC 8.2.2 bug
  if impl(ghc >= 8.4)
    cpp-options: -DSDP_LINEAR_EXTRAS
  
  if impl(ghc >= 8.6)
    cpp-options: -DSDP_QUALIFIED_CONSTRAINTS
  
  -- GHC 8.0.2 bug
  if impl(ghc == 8.0.2)
    cpp-options: -DSDP_DISABLE_SHAPED
  
  exposed-modules:
    -- Commons
    SDP.SafePrelude
    SDP.Comparing
    SDP.Finite
    SDP.Tuple
    SDP.Ratio
    SDP.Proxy
    
    -- Sorting
    SDP.SortM.Insertion
    SDP.SortM.Tim
    SDP.SortM
    
    -- Classes
    SDP.Forceable
    SDP.Estimate
    SDP.Bordered
    SDP.Nullable
    SDP.IndexedM
    SDP.LinearM
    SDP.Unboxed
    SDP.Indexed
    SDP.Linear
    SDP.Index
    SDP.Shape
    SDP.MapM
    SDP.Scan
    SDP.Sort
    SDP.Map
    SDP.Zip
    SDP.Set
    
    -- Service definitions
    Control.Exception.SDP
    
    Text.Show.SDP
    Text.Read.SDP
  
  other-modules:
    -- To eliminate cyclic imports within the library
    SDP.Internal.Utils
    
    -- To eliminate cyclic imports in SDP.Nullable and SDP.Index
    SDP.Index.Class
    
    -- Ð—rimitive operations that do not require the Unboxed class, but used in
    -- it and its instances
    SDP.Unboxed.Utils
    
    -- Unboxed class with instances
    SDP.Unboxed.Class


